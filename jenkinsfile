pipeline {
    agent any
    tools {
        maven 'MAVEN'
        jdk 'JDK'
    }
    stages {
        stage ("checkout github credential"){
            steps {
                git branch: 'junitbr', credentialsId: 'GithubToken', url: 'https://github.com/KhediraSpenser1/java-maven-junit5-example.git'            }
            }
        }
        stage ("build") {
            agent any
            steps {
                sh 'mvv -Dmaven.test.failure.ignore=true install'
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml'
                }
            }
        }
            //Add deploy steps & Alerts below
                sh 'echo "Deploying into Server"'
            }
        }


        stage('Approve Deployment') {
            agent any
            input{
                message "Do you want to proceed for deployment?"
            }
            steps {
    }

}